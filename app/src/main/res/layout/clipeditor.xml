<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <uk.co.dtapgames.apps.flatgamemaker.ClipPane
            android:id="@+id/clip_pane"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <uk.co.dtapgames.apps.flatgamemaker.ClipView
                    android:id="@+id/clip_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <uk.co.dtapgames.apps.flatgamemaker.GlyphLayer
                    android:id="@+id/glyph_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </uk.co.dtapgames.apps.flatgamemaker.ClipPane>

        <uk.co.dtapgames.apps.flatgamemaker.Filmstrip
            android:id="@+id/filmstrip"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>




</RelativeLayout>